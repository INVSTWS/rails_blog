<h1><%=pluralize(@posts.count, "Result")%></h1>

<table class="table table-borderless table-hover">
  <thead>
    <tr>
      <th><%= sort_link(@query, :title, "Title", default_order: :desc) %></th>
      <th><%= sort_link(@query, :content, "Content") %></th>
      <th><%= sort_link(@query, :introduction, "Introduction") %></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%=  post.content.body.to_plain_text.truncate(25) %></td>
        <td><%=  post.introduction%></td>
        <td><%= link_to post.user.username, user_path(post.user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>