<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="d-flex justify-content-center">
  <div class="card px-4", style="width:60rem">
    <div class="mt-3">
      <%= form.label :title, style: "display: block" %>
      <%= form.text_field :title,  class: "form-control mb-3"%>
    </div>

    <div>
      <%= form.label :content, style: "display: block" %>
      <%= form.rich_text_area :content, placeholder: "Enter body of post", class: "form-control"%>
    </div>

    <div>
      <%= form.label :introduction, style: "display: block" %>
      <%= form.text_area :introduction, class: "form-control mb-3"%>
    </div>

    <div>
      <%= form.label :image, style: "display: block" %>
      <%= form.file_field :image, class: "form-control mb-3"%>
    </div>

    <div class="mb-4">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  </div>
</div>


<% end %>
