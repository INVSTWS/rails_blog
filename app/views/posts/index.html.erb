<p style="color: green"><%= notice %></p>

<h1>Posts</h1>


  <div class="justify-content-center row row-cols-3 ">
    <% @posts.each do |post| %>
      <div class="index-card card col-3 ms-5 mb-3">
        <% if post.image.attached?%>
            <%= image_tag(post.image, class:"post_image card-img-top")%>
        <%end%>
        <div class="card-body">
          <h5 class="card-title">
              <%= link_to post.title, post_path(post)%>
          </h5>

          <p class="card-text">
            <%= truncate(post.introduction, length:100) %>
          </p>
        </div>

      </div>
    <% end %>
  </div>
<%= link_to "New post", new_post_path %>

<%= button_to "Sign out", destroy_user_session_path, method: :delete %>

